{% extends 'base.html.twig' %}

{% block title %}Visualisation de stocks{% endblock %}

{% block body %}
    <nav>
        <a href="{{path('product_index')}}">Produits</a>
        <a href="{{path('brand_index')}}">Marques</a>
        <a href="{{path('category_index')}}">Categories</a>
        <a href="{{path('color_index')}}">Couleurs</a>
        <a href="{{path('size_index')}}">Pointures</a>
        <a href="{{path('stock_index')}}">Stocks</a>
    </nav>
    <h1>Visualisation de stocks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stock.id }}</td>
            </tr>
            <tr>
                <th>Produit</th>
                <td>{{ stock.product }}</td>
            </tr>
            <tr>
                <th>Pointure</th>
                <td>{{ stock.size }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ stock.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('stock_index') }}">Retour à la liste</a>

    <a href="{{ path('stock_edit', {'id': stock.id}) }}">Modifier</a>

    {{ include('stock/_delete_form.html.twig') }}
{% endblock %}
